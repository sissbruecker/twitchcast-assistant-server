<div class="container">

    <div class="row">
        <h4>Edit channel '{{displayName}}'</h4>
    </div>

    <form class="single-entry" method="post" action="/channels/{{channelId}}">
        <div class="row">
            <input type="text" id="input-add-alias" name="aliasName" autofocus
                   placeholder="Enter new alias">
            <input class="button-primary" type="submit" value="Add">
        </div>
        {{#each errors}}
            <div class="row message error">
                {{msg}}
            </div>
        {{/each}}
    </form>

    <table>
        <thead>
        <tr>
            <th>Alias</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each alias}}
            <tr>
                <td>{{name}}</td>
                <td>
                    <form class="inline" method="post"
                          action="/channels/{{../channelId}}/alias/{{name}}?_method=DELETE">
                        <input class="button" type="submit" value="Delete">
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
